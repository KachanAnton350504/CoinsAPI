<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <div class="error"> <%= devise_error_messages! %> </div>

    <%= f.label :email, class: "form-control center-block" %>
    <%= f.email_field :email, autofocus: true , class: "form-control center-block"%>
    <br>
    <%= f.label :password , class: "form-control center-block"%>
    <%= f.password_field :password, autocomplete: "off" , class: "form-control center-block"%>
    <br>
    <%= f.label :password_confirmation, class: "form-control center-block" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control center-block" %>
    <br>

  <div class="actions">
    <%= f.submit "Sign up", class: "form-control center-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
