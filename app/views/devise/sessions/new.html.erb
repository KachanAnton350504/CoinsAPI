<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email, class: "form-control center-block" %>
    <%= f.email_field :email, class: "form-control center-block", autofocus: true %>

    <br>
    <%= f.label :password, class: "form-control center-block" %>
    <%= f.password_field :password, class: "form-control center-block", autocomplete: "off" %>

  <div class="field">
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me%>
      <%= f.label :remember_me%>  
    <% end -%>
</div>
  <div class="actions">
    <%= f.submit "Log in" ,class: "form-control center-block"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
